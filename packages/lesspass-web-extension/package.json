{
  "name": "lesspass-web-extension",
  "version": "11.0.1",
  "description": "LessPass Web Extension",
  "license": "GPL-3.0-only",
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "type": "module",
  "scripts": {
    "build": "yarn clean && yarn i18n && vite build",
    "clean": "rm -rf dist",
    "i18n": "rm -rf mkdir ./dist/locales && mkdir -p ./dist/locales && cp -r ../lesspass-i18n/src/locales/* ./dist/locales/ && echo 'translations copied'",
    "release": "yarn clean && yarn build && yarn amo && yarn cws",
    "release:amo": "yarn clean && yarn build && yarn amo",
    "release:cws": "yarn clean && yarn build && yarn cws",
    "amo": "cd dist && web-ext sign --channel=listed",
    "cws": "cd dist && chrome-webstore-upload",
    "dev": "vite",
    "lint": "eslint .",
    "prettier": "prettier --write src",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "lesspass-i18n": "workspace:*",
    "lesspass-web-component": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/chrome": "^0.1.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "chrome-webstore-upload-cli": "^3.3.2",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "web-ext": "^8.9.0"
  }
}
