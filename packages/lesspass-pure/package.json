{
  "name": "lesspass-pure",
  "version": "10.0.1",
  "description": "LessPass web component",
  "license": "GPL-3.0",
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "scripts": {
    "start": "vue-cli-service serve --port 8000",
    "build": "vue-cli-service build",
    "i18n:build": "node src/i18n/build.js",
    "i18n:translate": "node src/i18n/translate.js",
    "prettier": "prettier --write 'src/**/*'",
    "test": "yarn test:unit && yarn test:e2e",
    "test:watch": "vue-cli-service test:unit --watch",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e --headless",
    "lint": "vue-cli-service lint",
    "clean": "rm -rf node_modules dist"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "webextensions": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "dependencies": {
    "@oslab/atob": "^0.1.0",
    "@oslab/btoa": "^0.1.0",
    "awesomplete": "^1.1.5",
    "axios": "^0.21.4",
    "balloon-css": "^1.2.0",
    "bootstrap": "^4.6.2",
    "core-js": "^3.29.1",
    "csv-stringify": "^6.3.0",
    "file-saver": "^2.0.5",
    "font-awesome": "^4.7.0",
    "jwt-decode": "^3.1.2",
    "lesspass": "workspace:*",
    "lodash": "^4.17.21",
    "vue": "^2.6.12",
    "vue-polyglot": "^2.0.1",
    "vue-router": "^3.5.1",
    "vuejs-paginate": "^2.1.0",
    "vuex": "^3.6.2",
    "vuex-persistedstate": "^3.2.0",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-plugin-e2e-cypress": "^4.5.19",
    "@vue/cli-plugin-eslint": "^4.5.19",
    "@vue/cli-plugin-unit-jest": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "@vue/test-utils": "^1.3.4",
    "axios-mock-adapter": "^1.21.3",
    "babel-eslint": "^10.1.0",
    "cypress-plugin-tab": "^1.0.5",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "vue-template-compiler": "^2.7.14"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
