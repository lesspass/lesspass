{
  "name": "lesspass-i18n",
  "version": "0.1.0",
  "description": "Internationalization package for LessPass applications",
  "license": "AGPL-3.0-only",
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn i18n && tsup",
    "clean": "rm -rf dist",
    "i18n": "i18next '../lesspass-web-component/src/**/*.{ts,tsx}' '../lesspass-mobile/src/**/*.{js,jsx,ts,tsx}' --output src/locales/\\$LOCALE/\\$NAMESPACE.json --config ./i18next-parser.config.ts",
    "test": "eslint . && echo 'eslint passed'",
    "prettier": "prettier --write src",
    "update-translations": "yarn i18n && yarn build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "i18next-parser": "^9.3.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "tsup": [
    {
      "entry": [
        "./src/index.ts"
      ],
      "format": [
        "esm"
      ],
      "platform": "browser",
      "dts": true,
      "clean": true
    }
  ]
}
